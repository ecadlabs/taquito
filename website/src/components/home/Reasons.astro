---
import spaceshipIcon from "../../images/icons/spaceship.svg";
import tacoIcon from "../../images/icons/taco.svg";
import integrationIcon from "../../images/icons/integration.svg";
---

<section class="slant-container pb-12 pt-24">
  <div class="bg-slant"></div>
  <div
    class="z-10 relative flex flex-col md:flex-row space-y-6 w-2/3 2xl:w-1/2 3xl:w-1/3 mx-auto justify-between mt-16 md:mt-0"
  >
    <div class="flex flex-col items-center gap-4">
      <div
        class="bg-secondary rounded-full flex items-center justify-center size-fit"
      >
        <img
          src={spaceshipIcon.src}
          alt="Boosts Productivity"
          class="size-32 p-8"
        />
      </div>
      <p class="text-xl font-semibold">Boosts Productivity</p>
    </div>
    <div class="flex flex-col items-center gap-4">
      <div
        class="bg-secondary rounded-full flex items-center justify-center size-fit"
      >
        <img
          src={tacoIcon.src}
          alt="Boosts Productivity"
          class="size-32 p-8"
        />
      </div>
      <p class="text-xl font-semibold">Improves Quality</p>
    </div>
    <div class="flex flex-col items-center gap-4">
      <div
        class="bg-secondary rounded-full flex items-center justify-center size-fit"
      >
        <img
          src={integrationIcon.src}
          alt="Boosts Productivity"
          class="size-32 p-8"
        />
      </div>
      <p class="text-xl font-semibold">Easy Integration</p>
    </div>
  </div>
</section>

<style>
  .slant-container {
    position: relative;
    background: #ffffff;
  }

  .bg-slant {
    position: absolute;
    top: -1px;
    left: -1px;
    width: calc(100% + 2px);
    height: calc(20% + 2px);
    background: var(--color-background-primary);
    clip-path: polygon(0 0, 100% 0, 100% 20%, 0 60%);
    z-index: 0;
  }

  @media (min-width: 48rem) {
    .bg-slant {
      position: absolute;
      top: -1px;
      left: -1px;
      width: calc(100% + 2px);
      height: calc(100% + 2px);
      background: var(--color-background-primary);
      clip-path: polygon(0 0, 100% 0, 100% 20%, 0 60%);
      z-index: 0;
    }
  }
</style>
