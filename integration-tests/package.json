{
  "name": "integration-tests",
  "scripts": {
    "test:faucet": "RUN_WITH_FAUCET=true jest --runInBand",
    "test:edonet": "EDONET=true jest",
    "test:edonet-faucet": "RUN_EDONET_WITH_FAUCET=true jest --runInBand",
    "test:florencenet": "FLORENCENET=true jest",
    "test:florencenet-faucet": "RUN_FLORENCENET_WITH_FAUCET=true jest --runInBand",
    "test:granadanet": "GRANADANET=true jest",
    "test:granadanet-faucet": "RUN_GRANADANET_WITH_FAUCET=true jest --runInBand",
    "test": "jest"
  },
  "version": "10.1.2",
  "dependencies": {
    "@ledgerhq/hw-transport": "^5.51.1",
    "@ledgerhq/hw-transport-node-hid": "^5.51.1",
    "@taquito/http-utils": "^10.1.2",
    "@taquito/local-forging": "^10.1.2",
    "@taquito/michel-codec": "^10.1.2",
    "@taquito/michelson-encoder": "^10.1.2",
    "@taquito/remote-signer": "^10.1.2",
    "@taquito/rpc": "^10.1.2",
    "@taquito/signer": "^10.1.2",
    "@taquito/taquito": "^10.1.2",
    "@taquito/tzip16": "^10.1.2",
    "@taquito/utils": "^10.1.2",
    "bignumber.js": "^9.0.1"
  },
  "private": true,
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "testPathIgnorePatterns": [
      "./ledger-signer.spec.ts",
      "./ledger-signer-failing-tests.spec.ts"
    ],
    "reporters": [
      "default",
      "jest-stare"
    ],
    "testResultsProcessor": "./node_modules/jest-stare"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.2",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "eslint": "^7.29.0",
    "jest": "^26.6.3",
    "jest-config": "^26.6.3",
    "jest-retries": "^1.0.1",
    "jest-stare": "2.2.2",
    "lint-staged": "^11.0.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^10.0.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "typescript": "~4.1.5"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
