{
  "name": "integration-tests",
  "scripts": {
    "test:faucet": "RUN_WITH_FAUCET=true jest --runInBand",
    "test:hangzhounet": "HANGZHOUNET=true jest",
    "test:hangzhounet-faucet": "RUN_HANGZHOUNET_WITH_FAUCET=true jest --runInBand",
    "test:ithacanet": "ITHACANET=true jest",
    "test:ithacanet-faucet": "RUN_ITHACANET_WITH_FAUCET=true jest --runInBand",
    "test": "jest"
  },
  "version": "11.2.0",
  "dependencies": {
    "@ledgerhq/hw-transport": "^6.20.0",
    "@ledgerhq/hw-transport-node-hid": "^6.20.0",
    "@taquito/http-utils": "^11.2.0",
    "@taquito/local-forging": "^11.2.0",
    "@taquito/michel-codec": "^11.2.0",
    "@taquito/michelson-encoder": "^11.2.0",
    "@taquito/remote-signer": "^11.2.0",
    "@taquito/rpc": "^11.2.0",
    "@taquito/signer": "^11.2.0",
    "@taquito/taquito": "^11.2.0",
    "@taquito/tzip12": "^11.2.0",
    "@taquito/tzip16": "^11.2.0",
    "@taquito/utils": "^11.2.0",
    "bignumber.js": "^9.0.2",
    "blakejs": "^1.1.1"
  },
  "private": true,
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "testPathIgnorePatterns": [
      "./ledger-signer.spec.ts",
      "./ledger-signer-failing-tests.spec.ts"
    ],
    "reporters": [
      "default",
      "jest-stare"
    ],
    "testResultsProcessor": "./node_modules/jest-stare"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "eslint": "^8.5.0",
    "jest": "^26.6.3",
    "jest-config": "^26.6.3",
    "jest-retries": "^1.0.1",
    "jest-stare": "2.3.0",
    "lint-staged": "^12.1.2",
    "ts-jest": "^26.4.4",
    "ts-node": "^10.4.0",
    "typescript": "~4.1.5"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
